<div>
  <h1>Articles</h1>
  <hr>
  <div ui-view>
    <a ui-sref="articles.create">Create Article</a>
    <div ng-repeat="article in ac.articles">
      <h2>
        <a ui-sref="articles.details({articleId:article._id})">{{article.title}}</a>
      </h2>
      <div class="body">
        {{article.body}}
      </div>
    </div>
  </div>
</div>
